<%- include('header') %>

    <body data-type="widgets">
        <script src="/admin/js/theme.js"></script>
        <div class="am-g tpl-g">
            <!-- 头部 -->
            <%- include('components/nav-header') %>
            <!-- 风格切换 -->
            <%- include('components/tpl-skiner') %>
            <!-- 侧边导航栏 -->
            <%- include('components/side-bar') %>

            <!-- 内容区域 -->
            <div class="tpl-content-wrapper">

                <div class="row-content am-cf">
                    <div class="row">

                        <div class="am-u-sm-12 am-u-md-12 am-u-lg-12">
                            <div class="widget am-cf">
                                <div class="widget-head am-cf">
                                    <div class="widget-title am-fl">广告图编辑</div>
                                    <div class="widget-function am-fr">
                                        <a href="javascript:;" class="am-icon-cog"></a>
                                    </div>
                                </div>
                                <div class="widget-body am-fr">

                                    <form class="am-form tpl-form-line-form" action="/admin/ad_manage/update" method="post" enctype="multipart/form-data" >
                                        <input type="hidden" name="ad_id" value="<%= detail._id %>" >
                                        <div class="am-form-group">
                                            <label for="user-intro" class="am-u-sm-3 am-form-label">是否展示
                                                <span class="tpl-form-line-small-title">Show</span>
                                            </label>
                                            <div class="am-u-sm-9">
                                                <div class="tpl-switch">
                                                    <input type="checkbox" name="is_show" value="1" class="ios-switch bigswitch tpl-switch-btn" <% if(detail.is_show == '1') { %> checked <% } %> >
                                                    <div class="tpl-switch-btn-view">
                                                        <div></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="am-form-group" id="linkForm" >
                                            <label for="user-name" class="am-u-sm-3 am-form-label">跳转链接
                                                <span class="tpl-form-line-small-title">Link</span>
                                            </label>
                                            <div class="am-u-sm-9">
                                                <input type="text" name="link" value="<%= detail.link %>" class="tpl-form-input" id="user-name" placeholder="请输入跳转链接">
                                            </div>
                                        </div>

                                        <div class="am-form-group">
                                            <label class="am-u-sm-3 am-form-label">图片描述
                                                <span class="tpl-form-line-small-title">Desc</span>
                                            </label>
                                            <div class="am-u-sm-9">
                                                <input type="text" name="desc" value="<%= detail.desc %>" placeholder="输入图片描述">
                                            </div>
                                        </div>

                                        <div class="am-form-group">
                                            <label for="user-phone" class="am-u-sm-3 am-form-label">添加分类
                                                <span class="tpl-form-line-small-title">Type</span>
                                            </label>
                                            <div class="am-u-sm-9">
                                                <select name="type" data-am-selected="{searchBox: 1}"  style="display: none;">
                                                    <option value="banner" <% if(detail.type == "banner") {%> selected <% } %> >首页banner</option>
                                                    <option value="side_1" <% if(detail.type == "side_1") {%> selected <% } %> >侧边banner上</option>
                                                    <option value="side_2" <% if(detail.type == "side_2") {%> selected <% } %> >侧标banner下</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="am-form-group">
                                            <label for="user-email" class="am-u-sm-3 am-form-label">下架时间
                                                <span class="tpl-form-line-small-title">Time</span>
                                            </label>
                                            <div class="am-u-sm-9">
                                                <input type="text" name="offline_time" class="am-form-field tpl-form-no-bg" value="<%= detail.offline_time %>" placeholder="下架时间" data-am-datepicker="" readonly>
                                            </div>
                                        </div>

                                        <div class="am-form-group">
                                            <label for="user-weibo" class="am-u-sm-3 am-form-label">封面图
                                                <span class="tpl-form-line-small-title">Images</span>
                                            </label>
                                            <div class="am-u-sm-9">
                                                <div class="am-form-group am-form-file">
                                                    <div class="tpl-form-file-img">
                                                        <img src="/img/ad/<%= detail.pic %>" alt="">
                                                    </div>
                                                    <button type="button" class="am-btn am-btn-danger am-btn-sm">
                                                        <i class="am-icon-cloud-upload"></i> 添加封面图片
                                                    </button>
                                                    <input id="doc-form-file" name="pic" value="" type="file"  >
                                                </div>

                                            </div>
                                        </div>

                                        <div class="am-form-group">
                                            <div class="am-u-sm-9 am-u-sm-push-3">
                                                <input type="submit" value="更新" class="am-btn am-btn-primary tpl-btn-bg-color-success ">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </body>

    <%- include('footer') %>

<script>

var ad_init = (function (win,$) {

    function bindUi() {
        
    }
    bindUi();
    
})(window,jQuery)
</script>